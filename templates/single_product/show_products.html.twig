{%  extends "base.html.twig" %}

{% block title   %}

	view

{% endblock %}

{% block body    %}
	<div class="container" style="width:500px;">
		<div class="table-container">

			<table class="table">
				<thead>
				<tr>

					<th scope="col">ID</th>
					<th scope="col">Title</th>
					<th scope="col">Description</th>
					<th scope="col">Specification</th>
					<th scope="col">#</th>
					<th scope="col">#</th>
				</tr>
				</thead>
				<tbody>
				{% for product in all_products %}

					<tr>

						<td>{{ product.id }}</td>
						<td>{{ product.title }}</td>
						<td>{{ product.description }}</td>
						<td>{{ product.specs }}</td>
						<td></td>
						<td><a href="/products_delete/{{ product.id }}">Delete</a></td>
					</tr>

				{% endfor %}
				</tbody>
			</table>

		</div>
	</div>
{% endblock %}

