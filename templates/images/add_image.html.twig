{% extends 'base.html.twig' %}

{% block title %}Hello AddOrderController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
	<div class="col-lg-12 col-md-12">
		<h3 class="mb-30">New Order</h3>
		<form action="/add_images" method="post" enctype="multipart/form-data">
			<div class="mt-12">
				<div class="form-select" id="default-select">
					<select name="product_id">
						{% for product in all_products %}
							<option value="{{ product.id }}">{{ product.id }}-{{ product.title }}</option>
						{% endfor %}
					</select>
				</div>
			</div>
			<hr>
			<div class="mt-12">
				<input type="file" name="imagePath">
			</div>
			<hr>
			<button type="submit" name="submit_btn" class="genric-btn success circle arrow">submit
				<span class="lnr lnr-arrow-right"></span></button>
		</form>
	</div>
</div>
	{% endblock %}
