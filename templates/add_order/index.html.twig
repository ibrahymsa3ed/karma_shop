{% extends 'base.html.twig' %}

{% block title %}Hello AddOrderController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="col-lg-12 col-md-12">
        <h3 class="mb-30">New Order</h3>
        <form action="/add_order" method="post">
            <div class="mt-12">
                <input type="text" name="product_title" placeholder="Enter Product Title"  required=""
                       class="single-input">
            </div>
            <div class="mt-12">
                <input type="text" name="product_desc" placeholder="Enter Product Description"  required=""
                       class="single-input">
            </div>
            <div class="mt-12">
                <input type="text" name="product_specs" placeholder="Enter Product Specs"  required=""
                       class="single-input">
            </div>
            <div class="mt-12">
                <input type="date" name="order_date"   required=""
                       class="single-input">
            </div>
            <div class="mt-12">
                <input type="text" name="order_inv_num" placeholder="Enter Order Invoice Number"  required=""
                       class="single-input">
            </div>

            <div class="mt-12">
                <input type="number" name="product_price" placeholder="Enter Product Price"  required=""
                       class="single-input">
            </div>
            <div class="mt-12">
                <input type="text" name="price_reason" placeholder="Enter Price Reason"  required=""
                       class="single-input">
            </div>
            <div class="mt-12">
                <input type="number" name="product_qty" placeholder="Enter Product Quantity"  required=""
                       class="single-input">
            </div>



    <br><br>
    <button type="submit" name="submit_btn" class="genric-btn success circle arrow">Add
        <span class="lnr lnr-arrow-right"></span></button>
    </form>
    </div>
</div>
{% endblock %}
